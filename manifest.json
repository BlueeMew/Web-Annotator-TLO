{
    "manifest_version":3,
    "name":"Web Annotator",
    "version":"1.0",
    "description": "IDK YET",

    "permissions": [
      "contextMenus",
      "activeTab",
      "storage",
      "scripting",
      "tabs",
      "nativeMessaging",
      "downloads"
    ],
    "host_permissions": [ "*://*/*" ],
    
    "background": {
      "service_worker": "background.js"
    },

    "action": {
      "default_popup": "Interface/popup.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScripts/content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [ "images/pinguin.png","images/notes.jpg" ],
        "matches": [ "<all_urls>" ]
      }
    ],
    "icons":{
      "48":"images.png"
    },
    "commands": {
    "highlightText": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Highlight the selected text."
    },"addNotes": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Add notes to the selected text."
    },"savePage": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Save the current Webpage."
    },"restorePage": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Restore highlights in current page."
    }
  }
}